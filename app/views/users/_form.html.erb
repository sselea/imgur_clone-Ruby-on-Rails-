

<%= form_for(@user, html: { multipart: true, class: 'form-horizontal',role: 'form'}) do |f| %>
  <% if @user.errors.any? %>

    <div id="error_explanation">
      <h4>
        <%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:
      </h4>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        <hr>
      </ul>
    </div>

  <% end %>

 	<div class="field form-group">
    <%= f.label :email,"Email",:class => "col-sm-6" %>
    <div class="col-sm-6">
       <%= f.text_field :email, :class => "form-control" %> 
    </div>
  </div>
	<div class="field form-group">
    <%= f.label :user_name,"User Name",:class => "col-sm-6" %>
    <div class="col-sm-6">
        <%= f.text_field :user_name, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password,"Password",:class => "col-sm-6" %>
    <div class="col-sm-6">
        <%= f.password_field :password,:class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password_confirmation,"Confirm Password", :class => "col-sm-6" %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation,:class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :avatar,"Image",:class => "col-sm-6" %>
    <%= f.file_field :avatar,  :class => "col-sm-6" %>
  </div>
  <br>
  <div class="actions col-sm-12">
    <button type="submit" class="btn btn-warning btn-sm">Create User</button>
  </div>

<%  end %>



